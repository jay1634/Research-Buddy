{
    "name": "Research Buddy",
    "description": "AI Poowered Research Assistant Extension",
    "version": "1.0",
    "manifest_version": 3,
    "permissions": [
        "activeTab",
        "storage",
        "sidePanel",
        "scripting"
    ],
    "action": {
      "default_tittle": "Research Buddy"
    },
    "side_panel": {
      "default_path": "sidepanel.html"
    },
    "background": {
        "service_worker" : "background.js"
    },
    "host_permissions": [
        "http://localhost:8080/*",
        "<all_urls>"
    ],
    "content_security_policy" :{
        "extension": "script-src 'self'; object-src 'self'"
    }
    
  }